{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"core/*": ["src/core/*"],
			"@/*": ["src/*"]
		},
		"incremental": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"]
}
