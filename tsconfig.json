{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"outDir": "./dist",
		"experimentalDecorators": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"declaration": true,
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"rootDir": "./src",
		"paths": {
			"core/*": ["core/*"],
			"vendors/pipe": ["vendors/operator/pipe.ts"],
			"vendors/compose": ["vendors/operator/compose.ts"],
			"vendors/task": ["vendors/operator/task.ts"],
			"vendors/chain": ["vendors/operator/chain.ts"],
			"vendors/app": ["vendors/app/index.ts"],
			"storage/base": ["vendors/storage/base.ts"],
			"storage/cache": ["vendors/storage/cache.ts"],
			"modules/*": ["modules/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
