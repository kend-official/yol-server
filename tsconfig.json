{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"outDir": "./dist",
		"experimentalDecorators": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"declaration": true,
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"rootDir": "./src",
		"paths": {
			"modules/*": ["modules/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
